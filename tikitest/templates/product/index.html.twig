{% extends 'headerAdmin.html.twig' %}
{% block body %}
<div class="container">
            {% for flash_message in app.session.flashBag.get('notice') %}
                <div class="alert alert-danger">
                <span>{{ flash_message }}</span>
                <i class="fa-solid fa-xmark" onclick="this.parentElement.style.display='none';"></i>
                </div>
            {% endfor %}
            {% for flash_message in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                <span>{{ flash_message }}</span>
                <i class="fa-solid fa-xmark" onclick="this.parentElement.style.display='none';"></i>
                </div>
            {% endfor %}
<div class="header-control"style="display: flex; justify-content: space-between;">
<div class="left_element" style="display: inline-block;">
  <a href="{{path('app_add_product')}}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add Product</a></div>



    
</div>
<div class="wrapHeaderControleBtnAndSearch" style="    display: flex;
    justify-content: space-between;">
  <div class="header-control_sort" style="display: inline-block;">
  Sort
    <a href="{{path('app_sortASC_product')}}" role="button" aria-pressed="true">Ascending</a>
    <a href="{{path('app_sortDESC_product')}}" role="button" aria-pressed="true">Descending</a>
  </div>
    <div class="right_element" style="display: inline-block;">
      <form action="{{ path('app_search_product')}}" method="post">
      <input type="search" placeholder="Search something" style="width: 300px;" name="search">
    </form>
    </div>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Brand</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
      <th scope="col">Menu</th>
    </tr>
  </thead>
  <tbody>
    {% for product in products %}
    <tr>
      <td>{{product.id}}</td>
      <td><img src="{{asset('imageAdmin/imgProduct/'~ product.image1)}}" alt="" srcset="" width='150' height='180'></td>
      <td>{{product.name}}</td>
      <td>{{product.categoryid.name}}</td>
      <td>{{product.brandid.name}}</td>
      <td>{{product.quantity}}</td>
      <td>{{product.price}}VND</td>
      <td>
        <a href="{{path('app_edit_product', {'id': product.id })}}}}"><i class="fa-regular fa-pen-to-square icon-product"></i></a>
        <a href="{{path('app_delete_product', {'id': product.id })}}}}" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa-solid fa-trash icon-product"></i></a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
</div>

{% endblock %}
