{% extends 'headerAdmin.html.twig' %}
{% block body %}
<div class="header-control">
  <a href="{{path('app_add_product')}}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add Product</a>
  <a href="{{path('app_category')}}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add Category</a>
    <input type="text" placeholder="Search something">
</div>
<div class="header-control">
Sort
  <a href="{{path('app_add_product')}}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ascending</a>
  <a href="{{path('app_add_product')}}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Descending</a>
</div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Brand</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
      <th scope="col">Menu</th>
    </tr>
  </thead>
  <tbody>
    {% for product in products %}
    <tr>
      <td>{{product.id}}</td>
      <td><img src="{{asset('imageAdmin/imgProduct/'~ product.image1)}}" alt="" srcset="" width='150' height='180'></td>
      <td>{{product.name}}</td>
      <td>{{product.categoryid.name}}</td>
      <td>{{product.brandid.name}}</td>
      <td>{{product.quantity}}</td>
      <td>{{product.price}}VND</td>
      <td>
        <a href="{{path('app_view_product', {'id': product.id })}}}}"><i class="fa-solid fa-eye"></i></a>
        <a href="{{path('app_edit_product', {'id': product.id })}}}}"><i class="fa-regular fa-pen-to-square icon-product"></i></a>
        <a href="{{path('app_delete_product', {'id': product.id })}}}}"><i class="fa-solid fa-trash icon-product"></i></a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
