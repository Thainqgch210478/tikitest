{% extends 'userBase.html.twig' %}
{% block title %}User Information{% endblock %}


{% block body %}
<section style="background-color: #eee;">
 

    <div class="row mt-5">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="https://scontent.fhan19-1.fna.fbcdn.net/v/t39.30808-6/318438313_1486159375127332_8235487916785982712_n.jpg?_nc_cat=106&ccb=1-7&_nc_sid=09cbfe&_nc_ohc=PYNsL52Lfd0AX9ZyDNh&_nc_ht=scontent.fhan19-1.fna&oh=00_AfDjs5HCG8QxmXjTiGHPWt_JNDeKE8kwjBGczXarrp8zCg&oe=63A4E558" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">{{user.email}}</h5>
            {# <p class="text-muted mb-1">Full Stack Developer</p>
            <p class="text-muted mb-4">Bay Area, San Francisco, CA</p> #}
            <div class="d-flex justify-content-center mb-2">
              
              <a href="{{path('app_edit_user',{'id':user.id})}}"><button type="button" class="btn btn-primary">Edit</button></a>
              {# <button type="button" class="btn btn-outline-primary ms-1">Message</button> #}
            </div>
          </div>
        </div>
       
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                           
                <p class="text-muted mb-0">{{user.userDetail.name}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.email}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Date of Birth</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.userDetail.dob | date('Y/m/d')}}</p>
              </div>
            </div>
          
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Address</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.userDetail.address}}</p>
              </div>
            </div>
                         
            </div>
          </div>
        </div>
       
        </div>
      </div>
    </div>
  </div>
</section>



{% endblock %}
