{% extends 'headerAdmin.html.twig' %}
{% block body %}
<div class="container">
<div class="header-control">
Sort
  <a href="{{path('app_add_product')}}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ascending</a>
  <a href="{{path('app_add_product')}}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Descending</a>
</div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Total Product</th>
      <th scope="col">Menu</th>
    </tr>
  </thead>
  <tbody>
  
    {% for category in categories %}
    {% set count = 0 %}
    <tr>
      <td>{{category.id}}</td>
      <td>{{category.name}}</td>
      {% for product in category.products %}
            {% set count = count + 1 %}
      {% endfor %}
      <td>{{count}}</td>
      <td>
        <a href="{{path('app_edit_category', {'id': category.id })}}}}"><i class="fa-regular fa-pen-to-square icon-product"></i></a>
        <a href="{{path('app_delete_category', {'id': category.id })}}}}"><i class="fa-solid fa-trash icon-product"></i></a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
<form action="{{ path ('app_add_category')}}"  method="post">
<div class="container">
    Category Name
    <input type="text" name='categoryName' placeholder='Add Category Name' required >
    <input type="submit" value="Add">
</div>
</form>
</div>

{% endblock %}

