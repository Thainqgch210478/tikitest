{% extends 'userBase.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
   
    <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        
{% for cart in carts %} 
     {% if cart.cusid.id == user.id  %}
        <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2" >
                <img style="object-fit:contain; "
                  src="{{asset('imageAdmin/imgProduct/'~ cart.productid.image1)}}"
                  class="img-fluid rounded-3" alt="Cotton T-shirt">
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2">{{cart.productid.name}}</p>
                {# <p><span class="text-muted">Size: </span>M <span class="text-muted">Color: </span>Grey</p> #}
              </div>
              <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                <button class="btn btn-link px-2"
                  onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                  <i class="fas fa-minus"></i>
                </button>

                <input id="form1" min="0" name="quantity" value="1" type="number"
                  class="form-control form-control-sm" disabled />

                <button class="btn btn-link px-2"
                  onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                  <i class="fas fa-plus"></i>
                </button>
              </div>
              <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 class="mb-0">{{cart.productid.price}}.000Ä‘</h5>
              </div>
              <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                {# <a href="{{path('delete_cart_product',{'id':cart.id})}}" class="text-danger"><i class="fas fa-trash fa-lg"></i></a> #}
              </div>
            </div>
          </div>
        </div>
    {% endif %} 
{% endfor %}
        

        <div class="card  ">
          <div class="card-body d-flex justify-content-around">
            
            <a href="{{path('add_order')}}"><button type="button" class="btn-block btn-lg btn-warning d-flex">Pay</button></a>
            
            <button type="button" class="btn-block btn-lg btn-primary">Continue shopping</button>
          </div>
        </div>

      </div>
    </div>
  </div>


{% endblock %}
